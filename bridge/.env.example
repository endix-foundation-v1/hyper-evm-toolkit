PORT=3010
WS_PATH=/ws
NODE_ENV=development

# Symbols accepted by the virtual engine
SYMBOLS=ETH-USD,BTC-USD,SOL-USD

# Matching and risk constraints (integer lot/price precision)
DEFAULT_TICK_SIZE=1
DEFAULT_LOT_SIZE=1
MIN_ORDER_QUANTITY=1
MAX_ORDERBOOK_DEPTH=500

# Network simulation
NETWORK_BASE_LATENCY_MS=5
NETWORK_JITTER_MS=2
NETWORK_PACKET_LOSS_RATE=0
NETWORK_RANDOM_SEED=42

# Block and confirmation simulation
BLOCK_INTERVAL_MS=250
MAX_TX_PER_BLOCK=2000
DEFAULT_CONFIRMATIONS=2
CONFIRMATION_PROBABILITY_PER_BLOCK=0.95

# Optional Anvil bridge settings
ANVIL_RPC_URL=http://127.0.0.1:8545
ANVIL_CHAIN_ID=31337
ANVIL_PRIVATE_KEY=
ANVIL_SINK_ADDRESS=

# Optional CoreWriter action bridge (Layer A<->B integration)
CORE_WRITER_BRIDGE_ENABLED=false
CORE_WRITER_BRIDGE_MODE=manual
CORE_WRITER_BRIDGE_INTERVAL_MS=250
CORE_WRITER_ADDRESS=0x3333333333333333333333333333333333333333
HYPER_CORE_ADDRESS=0x9999999999999999999999999999999999999999
# Format: spotIndex:symbol,spotIndex:symbol
CORE_WRITER_BRIDGE_MARKET_MAP=1:ETH-USD

# Replay and logs
DATA_DIR=./data
COMMAND_LOG_FILE=./data/command-log.jsonl
STATE_SYNC_FILE=./data/state-sync.json

# Rate limiting
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=10000
