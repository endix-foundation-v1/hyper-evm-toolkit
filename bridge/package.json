{
  "name": "@hyper-evm-toolkit/bridge",
  "version": "0.1.0",
  "description": "Level 3 TypeScript CLOB bridge for Hyperliquid EVM testing â€” async settlement with matching engine",
  "type": "module",
  "scripts": {
    "dev": "./scripts/run_with_npm_version.sh tsx watch src/index.ts",
    "start": "./scripts/run_with_npm_version.sh node dist/index.js",
    "build": "./scripts/run_with_npm_version.sh tsc",
    "typecheck": "./scripts/run_with_npm_version.sh tsc --noEmit",
    "test": "./scripts/run_with_npm_version.sh vitest run",
    "test:watch": "./scripts/run_with_npm_version.sh vitest",
    "test:cov": "./scripts/run_with_npm_version.sh vitest run --coverage",
    "benchmark": "./scripts/run_with_npm_version.sh tsx src/benchmark.ts",
    "lint": "./scripts/run_with_npm_version.sh eslint .",
    "lint:fix": "./scripts/run_with_npm_version.sh eslint . --fix",
    "format": "./scripts/run_with_npm_version.sh prettier --write .",
    "format:check": "./scripts/run_with_npm_version.sh prettier --check .",
    "check": "npm run lint && npm run format:check",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "prom-client": "^15.1.3",
    "viem": "^2.43.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/express": "^4.17.23",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "./scripts/run_with_npm_version.sh eslint --fix",
      "./scripts/run_with_npm_version.sh prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "./scripts/run_with_npm_version.sh prettier --write"
    ]
  }
}
